<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgall">

    <!-- Header: Title -->
    <TextView
        android:id="@+id/textCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Crea tu cuenta"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header: Subtitle -->
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Llena los siguientes datos"
        android:textColor="#D8D8D8"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCreateAccount" />

    <!-- Inputs -->
    <EditText
        android:id="@+id/editTextUsuario"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="#1A1919"
        android:hint="Usuario"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#D8D8D8"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSubtitle" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#1A1919"
        android:hint="Correo Electr칩nico"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#D8D8D8"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextUsuario" />

    <EditText
        android:id="@+id/editTextContrase침a"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#1A1919"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#D8D8D8"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCorreo" />

    <!-- Button: Create Account -->
    <Button
        android:id="@+id/crear"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E53935"
        android:text="Crear Cuenta"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextContrase침a" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="123dp"
        android:layout_height="75dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>